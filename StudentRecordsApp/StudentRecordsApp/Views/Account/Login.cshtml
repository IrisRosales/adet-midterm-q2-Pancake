@model Login

    <style>
        p {
            font-family: Cambria;
            font-size: 100px;
            font-weight: bold;
            margin-top: 100px;
            line-height: 45%;
        }

        h5 {
            font-family: Cambria;
            font-weight: bold;
            font-size: 30px;
            margin-bottom: 130px;
        }

        .container {
            padding: 16px;
        }
    </style>

    <div class="text-center">
        <p>Pancake University</p>
        <h5>Portal</h5>
        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="row">
            <div class="col-6 offset-3">
                <form asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="Enter Email Address"/>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" type="password" placeholder="******"/>
                    </div>
                    <button class="btn btn-primary" type="submit">Log In</button>
                </form>
            </div>
        </div>
        
    </div>
