<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentID)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Last_Name)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.First_Name)
            </th>
